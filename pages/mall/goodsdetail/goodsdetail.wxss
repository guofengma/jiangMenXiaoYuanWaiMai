@import "selcolor/selcolor.wxss";
@import "argument/argument.wxss";

page {
  background-color: #f2f2f2;
  font-family: "微软雅黑";
}

.goods_txt {
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
  font-size: 30rpx;
  color: black;
  margin-bottom: 20rpx;
}

.swiper {
  width: 100%;
  height: 240px;
	position: relative;
}

.content {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.about {
  font-size: 30rpx;
  color: black;
}

.price {
  display: flex;
  height: 40rpx;
  color: red;
  align-items: center;
  font-size: 32rpx;
}

.nums {
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 28rpx;
  align-items: flex-end;
  height: 60rpx;
}

.repertory {
  width: 50%;
  color: grey;
}

.selcolor {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50rpx;
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: solid 2rpx #f2f2f2;
}

.sel {
  flex: 1;
  font-size: 28rpx;
}

.right {
  height: 28rpx;
  width: 28rpx;
}

.selargument {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50rpx;
  padding: 20rpx;
  background-color: #fff;
}

.discuss {
  height: 220rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

.goods_discuss {
  font-size: 28rpx;
  color: #333;
}

.discuss_type {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.good_discuss {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  height: 50rpx;
  width: 160rpx;
  background-color: #28c5be;
  border-radius: 10rpx;
}

.un_good_discuss {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  height: 50rpx;
  width: 160rpx;
  background-color: gainsboro;
  border-radius: 10rpx;
}

.all {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
}

.all_discuss {
  display: flex;
  justify-content: center;
  border: solid #28c5be 3rpx;
  font-size: 28rpx;
  width: 200rpx;
  height: 40rpx;
  text-align: center;
  align-items: center;
  border-radius: 10rpx;
  color: #28c5be;
}

.goodsdetail {
  height: 80rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  font-size: 32rpx;
}

.parse {
  margin-bottom: 140rpx;
}

/*底部按钮*/

.paid_bg {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ccc;
  font-size: 0;
}

.call_bg {
  display: flex;
  flex-direction: column;
  width: 20%;
  justify-content: center;
  align-items: center;
 
}
.kf-btn{
    width: 16%;
    background: #fff;
    padding-top: 10rpx;
    line-height: 0;
    height: 100%;
    border-radius: 0;
    display: inline-block;
}
.kf-icon{
  width: 42rpx;
  height: 42rpx;
  display: block;
  margin: 0 auto;
  margin-bottom:18rpx;
}
.kf-wd{
  width: 100;
  text-align: center;
  font-size: 24rpx;
  display: block;
}
.contact-button{
  background: #000
}
.call_image {
  height: 40rpx;
  width: 40rpx;
}
.wx-contact-button-wrapper{
  color: #000;
}
.call_right {
  border-right: solid 2rpx #fff;
}

.call_txt {
  color: #fff;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.addCart {
  height: 100%;
  width: 42%;
  background-color: #f89d27;
  display: inline-block;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400rpx;
  vertical-align: top;
  text-align: center;
  line-height: 90rpx;
}

.pay {
  height: 100%;
  width: 42%;
  display: inline-block;
  line-height: 90rpx;
  background-color: #fc3131;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400rpx;
  vertical-align: top;
  text-align: center;
}

.sel_color {
  height: 80%;
}
.nums-bg{
  position: relative;
}
.goods-nums{
  position: absolute;
  background-color: red;
  left: 31%;
  top: 8rpx;
  font-size: 16rpx;
  color: #FFF;
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.visitedLog{
	height: calc(100% - 50rpx);
	width: 200rpx;
	position: absolute;
	top: 50rpx;
	left: 0;
	padding: 20rpx;
	box-sizing: border-box;
	color: #fff;
}
.logList{
	height: calc(100% - 60rpx);
}
.logListItem{
	display: flex;
	width: 100%;
	box-sizing: border-box;
	background-color: rgba(0, 0, 0, 0.5);
	padding: 10rpx;
	margin-bottom: 10rpx;
}
.logListItem image{
	width: 50rpx;
	height: 50rpx;
	border-radius: 25rpx;
	margin-right: 30rpx;
}
.logListItem text{
	font-size: 30rpx;
	line-height: 50rpx;
}
.logData{
	background-color: rgba(0, 0, 0, 0.5);
	font-size: 20rpx;
	line-height: 38rpx;
	text-align: center;
	width: 100%;
	position: absolute;
	bottom: 12rpx;
}

.on-notice{
  position:absolute;
  top: 0; 
  background-color: rgba(0, 0, 0, 0.5);
  height: 50rpx;
  width: 100%;
}
.notice{
  height: 50rpx;
  width: 100%;
  color: #fff;
}
.notice swiper-item{
   height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
}
.noticetxt{
  /* margin-top:10rpx; */
  color: #6db5bf;
  margin-left: 20rpx;
}
.notice-img{
  height: 30rpx;
  width: 30rpx;
  margin-left:20rpx;
  margin-right:40rpx;
  vertical-align: middle
}
/*商品详情页 店铺信息  */
.store-box{
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: #fff;
  padding-top: 0;
}
.store-title{
  height: 90rpx;
  border-bottom: 1px solid #c8c8c8;
  display: flex;
  display:-webkit-flex;
  align-items: center;
  width:100%;
  box-sizing: border-box;
}
.store-intro{
  padding: 30rpx 0;
  font-size: 32rpx;
  padding-bottom: 0;
}
.store-logo{
  max-width: 150rpx;
  max-height: 60rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.store-name{
  vertical-align: middle;
}
.pro-num{
  margin-bottom: 30rpx;
  display: inline-block;
}
.store-box .btn{
  padding:20rpx;
  text-align: center; 
  border: 1px solid #979696;
  border-radius: 10rpx;
  font-weight: 400;
}
.store-box .btn-icon{
  width: 30rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 10rpx;
}

/*商品评价*/
.comments{
  padding:0 30rpx 30rpx;
  background: #fff;
}
.comment-tit{
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #c8c8c8;
  font-size: 32rpx;
}
.comment-box{
  padding: 20rpx 0;
}
.comment-user{
  display: flex;
  display:-webkit-flex;
  align-items: center;
  margin-bottom:10rpx;
}
.comment-user-head{
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: top;
  margin-top:10rpx;
}

.comment-user-nickname{
    font-size: 30rpx;
    width: 430rpx;
}

.comment-time{
  color:#515151;
  font-size: 30rpx;
  margin-top:10rpx;
}
.comment-cont{
  padding-left: 86rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid #b8b8b9;
}
.comment-word{
  font-size: 30rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}
.comment-foot{
  font-size: 30rpx;
  color: #666666;
}

/*商品sku信息 Start  */
.sku-box{
  background: #fff;
  margin-bottom:20rpx;
}
.sku-checked{
  padding: 30rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #e2e2e2;
}
.sku-info{
  padding: 30rpx;
}
.sku-item{
  
}
.sku-k{
  color: #666666;
  line-height: 58rpx;
  display: inline-block;
  box-sizing: border-box;
  width: 100rpx;
  margin-right: 20rpx;
  font-size: 32rpx;
  vertical-align: top;
}
.sku-v-box{
  display: inline-block;
  width: calc(100% - 120rpx);
  font-size: 32rpx;
}
.sku-v{
  display: inline-block;
  box-sizing: border-box;
  line-height: 58rpx;
  height: 58rpx;
  padding: 0 30rpx;
  background: #f3f2fa;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  color: #1a1a1a;
}
.sku-v.active{
  background: #fc3131;
  color: #fff;
}
/*商品sku信息 End  */

/*商品数量操作 Start*/
.num-handle{
  background: #fff;
  margin-bottom: 20rpx;
}
.num-handle.sku-item{
  padding: 30rpx;
}
.num-handle .sku-v-box{
  vertical-align: top;
}
.sub,.num,.add{
  display: inline-block;
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  color: #1a1a1a;
  border-top: 1px solid #bfbfbf;
  border-bottom: 1px solid #bfbfbf;
  border-left: 1px solid #bfbfbf;
  vertical-align: top;
  font-size: 32rpx;
}
.sub,.add{
  width: 58rpx;
  font-size: 40rpx;
}
.add{
  border-right: 1px solid #bfbfbf;
}
.num{
  width: 106rpx;
}
/*商品数量操作 End*/