
page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
}
.navigator-hover{
    background: none;
}
.cart-box{
    padding-bottom: 100rpx;
}

.cart_bg{
  height:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
  padding: 0 20rpx;
  color: #666;
  font-size:36rpx;
}
.sel_all{
  height: auto;
  display: flex;
  align-items: center;
}
.all_txt{
  margin-left: 10rpx;
}


.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-name{
    display: inline-block;
    width: 300rpx;
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
}
.cart-list .cart-pro-price{
    display: inline-block;
    float: right;
    height: 105rpx;
    line-height: 50rpx;
}
.cart-list .cart-count-box{
    position: absolute;
    left: 285;
    bottom: 20rpx;
    width: 250rpx;
    height: 80rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 80rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 50rpx;
    height: 100%;
}
.cart-count-num{
    width: 150rpx;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 44rpx;
}





.cart_footer_bg {
  position: fixed;
  bottom: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 90rpx;
  background-color: #f1f1f1;
  color: #333;
  padding-left: 10rpx; 
  align-items: center;
  font-size:32rpx;
}
.all_bg{
  flex: 1;
}
.all_color{
  color: red;
}
.clas_txt{
  font-size:24rpx;
   flex: 1;
}
.all_sub
{
  display: flex;
  flex-direction: row;
  align-items: center;
   font-size:28rpx;
}
.all_sub_txt{
  width: 200rpx;
  height:90rpx;
  background-color: #da251c;
  display: flex;
  align-items:center;
  justify-content: center;
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #FFF;
}

.goods_img {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img {
  height: 180rpx;
  width: 220rpx;
}

.goods_txt {
  margin-left: 10rpx;
  display: flex;
  height: 180rpx;
  justify-content: space-between;
  flex-direction: column;
  flex: 1;
}
.cart-goodstxt{
  font-size: 32rpx;
  height: 64rpx;
  line-height: 33rpx;
  color: #666;
}
/*文字超出3行设置...*/
.content_txt {
  display: -webkit-box;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -o-text-overflow: ellipsis;
  overflow: hidden;
}


.input {
  width:80rpx;
  height:40rpx;
  text-align: center;
  font-size: 32rpx;
}

.goods_price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.price{
  color: red;
  flex: 1;
}
.add_sub {
  display: flex;
  flex-direction: row;
  text-align: right;
  align-items: center;
}
.add{
  height:40rpx;
  width:40rpx;
  background-color:gainsboro;
  text-align: center;
  color: #666;
}


.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}
.btn{
     color: #999;
     font-size: 32rpx;
     margin: 0 280rpx;
}