.newest-box{
      padding:0 40rpx;
     margin-top: 10rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    height: 335rpx;
    margin:0 20rpx 20rpx 0;
    background:#fff;
    margin-top: 10rpx;

}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list .goods_img{
    width: 325rpx;
    height:250rpx;
}

.goods_about{
  height:28rpx;
  width: auto;
  font-size:28rpx;
  line-height:28rpx;
  margin: 0 10rpx;
  color: #333;
  
}
.goods_txt{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
-webkit-box-orient:vertical;

}
.goods_pri{
  display: flex;
  flex-direction: row;
  color: red;
  font-size:28rpx;
  height: 36rpx;
  align-items: center;
  padding: 10rpx;
}
.pri{
flex: 1;
}
.cart{
  height: 40rpx;
  width: 40rpx;
}