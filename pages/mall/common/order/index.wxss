.order_bg {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  color: #666;
  padding-bottom:0;
}

.order_img {
  height: 160rpx;
  width: 240rpx;
}

.orderNumber {
  height: 60rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 2rpx #f2f2f2;
  font-size: 32rpx;
}

.img_price {
  height: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:1rpx solid #eee;
}

.about_pri {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  height: 160rpx;
  justify-content: space-around;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width:80%;
}
.goods_pri_txt{
  
  text-align: right;
}
.goods_txt {
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  height:36rpx;
}

.pri {
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.goods_pri {
  color: red;
  flex: 1;
  font-size: 32rpx;
}

.order_state {
  display: flex;
  height: 80rpx;
  font-size: 32rpx;
  flex-direction: row;
  align-items: center;
  border-bottom: solid #f2f2f2 2rpx;
}

.state {
  flex: 1;
}

.order_btn{
  display: flex;
  flex-direction: row;
  height:100rpx;
  align-items: center;
  justify-content: flex-end;
  font-size:28rpx;
}
.order_clear{
  display: flex;
  align-items:center;
  justify-content: center;
  border:solid gainsboro 2rpx;
  width:130rpx;
  margin-left: 20rpx;
  border-radius: 8rpx;
  height:54rpx;
}
.state_color{
color: #da251c;
}