/* pages/discuss/discuss.wxss */
@import "../common/discuss/index.wxss";

.discuss_nav{
  display: flex;
  flex-direction: row;
  height:90rpx;
  width: 100%;
}


.paid_bg {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 120rpx;
  background-color: #141414;
}

.call_bg {
  display: flex;
  flex-direction: column;
  width: 25%;

  justify-content: center;
  align-items: center;
}

.call_image {
  height: 60rpx;
  width: 60rpx;
}

.call_txt {
  color: #fff;
  font-size: 28rpx;
}


.pay {
  height: auto;
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: 400rpx;
}
.pay.cartbg{
 background-color: #079892;
}
.pay.paybg{
 background-color: #28c5be;
}

.discuss_footer{
  margin-bottom: 20rpx;
}