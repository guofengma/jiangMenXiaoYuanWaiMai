.goods{
  margin: 0 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  border-bottom:1px solid #eee;
  padding-bottom: 20rpx;
}
.goods .img{
  height: 230rpx;
  width: 230rpx;
  border-radius: 5rpx;
  float: left;
}
.good-name{
  font-size: 32rpx;
  height: 100rpx;
  line-height: 50rpx;
  display: inline-block;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-contnt{
  height: 230rpx;
  margin-left: 250rpx;
  color: #333;
  box-sizing: border-box;
  padding-top: 15rpx;
}
.goods .sales{
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.goods .price{
  color: red;
  width: 300rpx;
  font-size: 32rpx;
}
.goods .price,.goods .sales{
  display: block;
  line-height: 1.5;
}