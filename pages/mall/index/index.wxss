.newest-box {
  width: 100%;
  margin-bottom: 50rpx;
}

.newest-list {
  margin: 10rpx 30rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #f2f2f2;
  padding: 20rpx 0 20rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 1px 10rpx rgba(0,0,0,.25);

}

.newest-list image {
  width: 200rpx;
  height: 200rpx;
}

.newest-list .pro-info{
  margin-left: 220rpx;
  padding-left: 10rpx;
}
.newest-list .classname {
  height: 50rpx;
}

.newest-list .tit {
  color: #323232;
  font-size: 32rpx;
  height: 90rpx;
}
.newest-list .tit text{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.newest-list .price {
  color: #f92f2f;
  font-size: 32rpx;
}
.sales-box{
  padding: 0;
  margin-top: -5rpx;
  margin-bottom: 10rpx;
}
.newest-list .sales{
  color: #515151;
  font-size: 26rpx;
  
}
.rec-goods {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ab956d;
  font-size: 28rpx;
  flex-direction: row;
  margin: 30rpx 0;
}

.rec-txt {
  margin: 0 20rpx;
}

.rec-left {
  height: 3rpx;
  background-color: #ab956d;
  width: 120rpx;
}

.nav {
  height: 2rpx;
  background-color: #f1f1f1;
  width: 100%;
}
.provier-data{
  position: absolute;
  color:gray;
  font-size: 24rpx;

  width: 100%;
  text-align: center;
}

.btn-container {
  position: fixed;
  right: 20rpx;
  bottom: 30rpx;
  z-index: 100;
}

.btn-contrast {
  background-color: #01bbfb;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  width: 100rpx;
  height: 100rpx;
  line-height: 140rpx;
  box-shadow: 2px 2px 3px #aaa;
  z-index: 99;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

/*首页样式修改  */
.recommend-title{
  font-size: 28rpx;
  height: 98rpx;
  line-height: 98rpx;
}
.top{
  padding: 10rpx 25rpx 20rpx;
}
.location-box,.search-box{
  height: 68rpx;
}
.location-box{
  background-color: #a9a9a9;
  color: #fff;
  width: 280rpx;
  border-radius: 50rpx;
  position: relative;
  box-sizing: border-box;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.location-icon{
  width: 30rpx;
  height: 35rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.location-name{
  max-width: 210rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display: inline-block;
  font-size: 28rpx;
}
.location-arrow{
  width:15rpx;
  height:23rpx;
}
.search-box{
  background: #ededed;
  border-radius: 50rpx;
  width: 400rpx;
  margin-left: 300rpx;
  box-sizing: border-box;
  padding-left: 28rpx;
  position:relative;
}
.search-icon{
  position: absolute;
  top: 20rpx;
}
.search{
  height: 68rpx;
  width: 320rpx;
  display: inline-block;
  margin-left: 40rpx;
  font-size: 28rpx;
}
/*搜索*/
.search-box image {
  width: 50rpx;
  height: 50rpx;
}
