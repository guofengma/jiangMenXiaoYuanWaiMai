page {
  color: #333;
  position: relative
}

.swiper {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.on-notice {
  position: absolute;
  top: 0;
  background-color: #141414;
  height: 50rpx;
  width: 100%;
  opacity: 0.6;
}

.fr {
  float: right;
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.notice {
  position: absolute;
  top: 0;
  height: 50rpx;
  width: 100%;
  color: #fff;
}

.notice swiper-item {
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
}

.noticetxt {
  margin-top: 10rpx;
  color: #6db5bf;
  margin-left: 20rpx;
}

.notice-img {
  height: 30rpx;
  width: 30rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.goods_txt {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}



.input-pla {
  font-size: 28rpx;
}

