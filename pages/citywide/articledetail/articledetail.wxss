@import "/pages/mall/wxParse/wxParse.wxss";
page{
	background: #ecebeb;
}
.article-detail-box{
	padding: 20rpx;
	background: #fff;
  margin-bottom: 20rpx;
}
.article-author-box{
	padding: 20rpx 0;
	margin: 20rpx 0;
}
.article-author-pic{
	width: 88rpx;
	height: 88rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}
.article-author-info{
	display: inline-block;
}
.article-addr-icon{
  width: 16rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.article-author-name{
	font-size: 32rpx;
	margin-right: 20rpx;
	font-weight: 400;
}
.article-author-time{
	font-size: 28rpx;
	color: #515151;
}
.article-addr{
	color: #8a8a8a;
	font-size: 28rpx;
}
.article-container{
  font-size: 30rpx;
  line-height: 42rpx;
  margin-bottom: 20rpx;
}
.article-content{
	margin: 20rpx 0;
}
.article-img{
	width:300rpx;
  height:300rpx;
  margin-bottom: 20rpx;
}
.article-foot{
	background: #fff;
	padding: 20rpx;
  margin-bottom: 20rpx;
}
.article-foot-tit{
	font-size: 32rpx;
	line-height: 88rpx;
	height: 88rpx;
	border-bottom: 1px solid #f0f0f0;
}

/*评价*/
.comment-box{
  padding: 20rpx 0;
}
.comment-user{
  display: flex;
  display:-webkit-flex;
  align-items: center;
  margin-bottom:10rpx;
}
.comment-user-head{
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: top;
  margin-top:10rpx;
}

.comment-user-nickname{
    font-size: 30rpx;
    width: 430rpx;
}

.comment-time{
  color:#515151;
  font-size: 30rpx;
  margin-top:10rpx;
}
.comment-cont{
  padding-left: 86rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid #b8b8b9;
}
.comment-word{
  font-size: 30rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}

/*底部操作导航*/
.art-handle-bg{
	height: 100rpx;
}
.art-handle-box{
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	height: 100rpx;
	background: #fff;
	z-index: 2;
	display: flex;
	align-items: center;
}
.art-handle-box .zan-box,.art-handle-box .pinglun-box{
	/* width: 188rpx; */
	/*width: 375rpx; */
	height: 100rpx;
	display: inline-block;
	text-align: center;
	box-sizing: border-box;
	padding:10rpx 0;
	font-size: 28rpx;
	flex: 1;
}
.zan-icon{
	width: 40rpx;
	height: 40rpx;
}
.pinglun-icon{
	width: 40rpx;
	height: 40rpx;
}
.call-box{
	width: 374rpx;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #e22319;
	color: #fff;
	font-size: 32rpx;
}
.call-icon{
	width: 34rpx;
	height: 34rpx;
	margin-right: 5rpx;
	line-height: 100rpx;
}
.zan-num,.pinglun-txt{
	display: block;
}

/*评论框*/
/*遮罩*/
.shadow{
	position: fixed;
	z-index: 2;
	left: 0;
	right: 0;
	top: 0;
	bottom: 120rpx;
	background: rgba(0,0,0,0.25);
}
.pl-box{
	padding: 16rpx 0 16rpx 20rpx;
	border-bottom: 1px solid #fff;
	background: #f5f5f5;
	position: fixed;
  left: 0;
  right: 0;
	bottom: 0;
  z-index: 3;
}
.pl-input{
	height: 78rpx;
	border-radius: 30rpx;
	background: #ededed;
	width: 600rpx;
	display: inline-block;
}
.pl-btn{
	color: #e22319;
	width: 130rpx;
	text-align: center;
	font-size: 32rpx;
	line-height: 78rpx;
	display: inline-block;
	vertical-align: top;
}