@import "/pages/mall/wxParse/wxParse.wxss";
.line{
	background: #efeff4;
	height: 20rpx;
}
.bulletin-title{
  position: relative;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #1a1a1a;
  font-size: 32rpx;
  background: #fff;
  font-weight: 400;
}
.bulletin-title::before {
  position: absolute;
  left: 130rpx;
  top: 50rpx;
  content: '';
  width: 150rpx;
  height: 4rpx;
  background: #000;
}

.bulletin-title::after {
  position: absolute;
  right: 130rpx;
  top: 50rpx;
  content: '';
  width: 150rpx;
  height: 4rpx;
  background: #000;
}
/*公告列表*/
.bulletins-box{
	border-top: 1px solid #d8d8d8;
	padding: 0 30rpx;
  height:1090rpx;
}
.list-item{
	border-bottom: 1rpx dashed #999;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.item-view-img{
  width: 220rpx;
  margin-right: 20rpx;
}
.item-info{
  display: inline-block;
  width: 450rpx;
}
.item-title{
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  line-height: 2;
}
.item-text{
  font-size: 28rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.8;
}
